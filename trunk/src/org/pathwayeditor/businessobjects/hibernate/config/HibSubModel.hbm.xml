<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibSubModel" table="ChildCompoundGraph">
		<id name="id" column="id" type="java.lang.Long">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="rootNode" column="root_node_id" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibCompoundNode" cascade="all" not-null="true" >
		</many-to-one>
		
		<set name="edges" inverse="true" cascade="all" collection-type="org.pathwayeditor.businessobjects.hibernate.customtypes.EdgeSetType">
			<key column="owning_child_model_id"/>
			<one-to-many class="org.pathwayeditor.businessobjects.hibernate.pojos.HibLinkEdge" />
		</set>
	</class>
</hibernate-mapping>
