<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibObjectType" table="objecttype">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <properties name="xak1objecttype" unique="true">
        	<many-to-one name="context" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibContext">
            	<column name="context_id" not-null="true" />
        	</many-to-one>
	        <property name="name" type="string">
    	        <column name="name" length="128" not-null="true" />
	        </property>
	    </properties>
        <property name="description" type="string">
            <column name="description" length="2048" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
