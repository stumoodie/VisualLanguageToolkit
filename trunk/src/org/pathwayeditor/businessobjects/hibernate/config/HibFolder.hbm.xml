<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.pathwayeditor.businessobjects.hibernate.pojos.HibFolder"
		table="folder" abstract="true">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="native" />
		</id>
		<set name="mapDiagrams" inverse="true"
			cascade="all,delete-orphan">
			<key>
				<column name="folder_id" not-null="true" />
			</key>
			<one-to-many
				class="org.pathwayeditor.businessobjects.hibernate.pojos.HibMapDiagram" />
		</set>
		<many-to-one name="repository"  class = "org.pathwayeditor.businessobjects.hibernate.pojos.HibRepository">
			<column name="repository_id" not-null="true" />
		</many-to-one>
		<set name="subFolders" inverse="true"
			cascade="all,delete-orphan">
			<key>
				<column name="parent_folder_id" not-null="true" />
			</key>
			<one-to-many
				class="org.pathwayeditor.businessobjects.hibernate.pojos.HibSubFolder" />
		</set>
		<property name="INode" type="int">
			<column name="inode" not-null="true" />
		</property>
		
		<joined-subclass
			name="org.pathwayeditor.businessobjects.hibernate.pojos.HibRootFolder"
			table="RootFolder">
			<key>
				<column name="id" not-null="true" unique="true" />
			</key>
			<many-to-one name="owningRepository" unique="true" class ="org.pathwayeditor.businessobjects.hibernate.pojos.HibRepository" >
				<column name="owning_repository_id" not-null="true" />
			</many-to-one>
		</joined-subclass>

		<joined-subclass
			name="org.pathwayeditor.businessobjects.hibernate.pojos.HibSubFolder"
			table="SubFolder">
			<key>
				<column name="id" not-null="true" unique="true" />
			</key>
			<properties name="xak1subfolder" unique="true">
				<many-to-one name="parentFolder"
					foreign-key="xfk1SubFolderParentFolder"
					class="org.pathwayeditor.businessobjects.hibernate.pojos.HibFolder">
					<column name="parent_folder_id" not-null="true" />
				</many-to-one>
				<property name="name" type="string">
					<column name="name" length="128" not-null="true" />
				</property>
				<property name="description" type="string">
					<column name="description" length="2048" not-null="true" />
				</property>
			</properties>
		</joined-subclass>
	</class>
</hibernate-mapping>
