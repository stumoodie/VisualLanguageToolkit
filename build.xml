	<pathelement  location="lib/hibernate-3.2/lib/swarmcache-1.0rc2.jar"/>
	<pathelement  location="lib/hibernate-3.2/lib/syndiag2.jar"/>
	<pathelement  location="lib/hibernate-3.2/lib/versioncheck.jar"/>
	<pathelement  location="lib/hibernate-3.2/lib/xml-apis.jar"/>
