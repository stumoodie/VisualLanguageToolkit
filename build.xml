	<pathelement  location="lib/hibernate-3.2/lib/cleanimports.jar"/>
	<pathelement  location="lib/hibernate-3.2/lib/commons-collections-2.1.1.jar"/>
	<pathelement  location="lib/hibernate-3.2/lib/commons-logging-1.0.4.jar"/>
