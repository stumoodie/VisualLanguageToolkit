	<pathelement  location="lib/hibernate-3.2/lib/jboss-cache.jar"/>
	<pathelement  location="lib/hibernate-3.2/lib/jboss-common.jar"/>
	<pathelement  location="lib/hibernate-3.2/lib/jboss-jmx.jar"/>
