		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/asm-attrs.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/c3p0-0.9.1.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/checkstyle-all.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/cleanimports.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/commons-collections-2.1.1.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/commons-logging-1.0.4.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/concurrent-1.3.2.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/dom4j-1.6.1.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/ehcache-1.2.3.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jaas.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jacc-1_0-fr.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/javassist.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jaxen-1.1-beta-7.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jboss-cache.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jboss-common.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jboss-jmx.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jboss-system.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jgroups-2.2.8.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/jta.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/oscache-2.1.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/proxool-0.8.3.jar" />
		<pathelement location="${lib.dir}/hibernate-3.2/${lib.dir}/swarmcache-1.0rc2.jar" />
