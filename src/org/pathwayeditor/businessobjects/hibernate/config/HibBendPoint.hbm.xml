<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibBendPoint" table="bendpoint">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <properties name="xak1bendpoint" unique="true">
        	<many-to-one name="owningLink" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibLinkAttribute"
        			insert="false" update="false">
            	<column name="link_attribute_id" not-null="false" />
        	</many-to-one>
        	<property name="creationSerial" type="int">
            	<column name="creation_serial" not-null="true" />
        	</property>
        </properties>
	  	<!-- property name="indexPos" type="int">
        	<column name="index_pos" not-null="true" />
      	</property-->
        <property name="XPosition" type="double">
            <column name="x_position" not-null="true" />
        </property>
        <property name="YPosition" type="double">
            <column name="y_position" not-null="true" />
        </property>
        <property name="firstRelativeDimensionX" type="double">
            <column name="first_rel_dim_x" not-null="true" />
        </property>
        <property name="firstRelativeDimensionY" type="double">
            <column name="first_rel_dim_y" not-null="true" />
        </property>
        <property name="secondRelativeDimensionX" type="double">
            <column name="second_rel_dim_x" not-null="true" />
        </property>
        <property name="secondRelativeDimensionY" type="double">
            <column name="second_rel_dim_y" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
