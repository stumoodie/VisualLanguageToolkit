<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibLabelAttribute" table="LabelAttribute">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="native" />
		</id>
        <many-to-one name="canvas" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibCanvas">
        	<column name="canvas_id" not-null="true"/>
        </many-to-one>
        <property name="creationSerial" type="int">
        	<column name="creation_serial" not-null="true" />
        </property>
		<many-to-one name="visualisableProperty" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibProperty" cascade="all">
			<column name="displayed_property_id" not-null="false" />
		</many-to-one>
		<property name="XPosition" type="int">
			<column name="x_position" not-null="true" />
		</property>
		<property name="YPosition" type="int" access="property">
			<column name="y_position" not-null="true" />
		</property>
		<property name="width" type="int" access="property">
			<column name="width" not-null="true" />
		</property>
		<property name="height" type="int" access="property">
			<column name="height" not-null="true" />
		</property>
		<property name="backgroundRed" type="int" access="property">
			<column name="background_red" not-null="true" />
		</property>
		<property name="backgroundGreen" type="int" access="property">
			<column name="background_green" not-null="true" />
		</property>
		<property name="backgroundBlue" type="int" access="property">
			<column name="background_blue" not-null="true" />
		</property>
	</class>
</hibernate-mapping>
