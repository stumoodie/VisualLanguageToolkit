<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibRepository" table="repository">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <properties name="xak1datastore" unique="true">
        	<property name="name" type="string">
            	<column name="name" length="128" not-null="true" />
        	</property>
        </properties>
        <property name="description" type="string">
            <column name="description" length="2048" not-null="true" />
        </property>
        <property name="buildNum" type="integer">
        	<column name="build_num" not-null="true" />
        </property>
		<set name="rootFolders" inverse="true" cascade="all,delete-orphan">
			<key>
				<column name="repository_id" not-null="true" />
			</key>
			<one-to-many
				class="org.pathwayeditor.businessobjects.hibernate.pojos.HibRootFolder" />
		</set>
        <!--one-to-one name="rootFolder"
        	 cascade="persist,delete" constrained="false"
        	 class="org.pathwayeditor.businessobjects.hibernate.pojos.HibRootFolder"/-->
    </class>
</hibernate-mapping>
