<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibRepository" table="repository">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <properties name="xak1datastore" unique="true">
        	<property name="name" type="string">
            	<column name="name" length="128" not-null="true" />
        	</property>
        </properties>
        <property name="description" type="string">
            <column name="description" length="2048" not-null="true" />
        </property>
        <property name="buildNum" type="integer">
        	<column name="build_num" not-null="true" />
        </property>
        <property name="lastINode" type="integer">
        	<column name="last_inode" not-null="true" />
        </property>
        <many-to-one name="rootFolder" cascade="all" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibRootFolder">
        	<column name="root_folder_id" not-null="false"/>
        </many-to-one>
        <set name="folders" inverse="true" cascade="all,delete-orphan">
        	<key column="repository_id" not-null="false"/>
        	<one-to-many class="org.pathwayeditor.businessobjects.hibernate.pojos.HibFolder"/> 
        </set>
        <set name="maps" inverse="true" cascade="all,delete-orphan">
        	<key column="repository_id" not-null="false"/>
        	<one-to-many class="org.pathwayeditor.businessobjects.hibernate.pojos.HibMap"/> 
        </set>
    </class>
    
	<query name="loadRepository"><![CDATA[
		from HibRepository as r left outer join fetch r.folders left outer join fetch r.maps where r.name = :name
    ]]></query>
    
</hibernate-mapping>
