<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibCanvas" table="canvas">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <properties name="xak1canvas" unique="true">
        	<many-to-one name="mapDiagram" class="org.pathwayeditor.businessobjects.hibernate.pojos.MapDiagram">
            	<column name="map_id" not-null="true" />
        	</many-to-one>
        </properties>
        <one-to-one name="model" property-ref="canvas" />
        <many-to-one name="context" class="org.pathwayeditor.businessobjects.hibernate.pojos.Context" cascade="persist,save-update">
            <column name="context_id" not-null="true" />
        </many-to-one>
        <property name="gridX" type="int">
            <column name="grid_x" not-null="true" />
        </property>
        <property name="gridY" type="int">
            <column name="grid_y" not-null="true" />
        </property>
        <property name="gridEnabled" type="boolean">
            <column name="grid_enabled" not-null="true" />
        </property>
        <property name="snapToGridEnabled" type="boolean">
            <column name="snap_to_grid_enabled" not-null="true" />
        </property>
        <property name="backgroundRed" type="int">
            <column name="background_red" not-null="true" />
        </property>
        <property name="backgroundGreen" type="int">
            <column name="background_green" not-null="true" />
        </property>
        <property name="backgroundBlue" type="int">
            <column name="background_blue" not-null="true" />
        </property>
        <property name="canvasWidth" type="int">
            <column name="canvas_width" not-null="true" />
        </property>
        <property name="canvasHeight" type="int">
            <column name="canvas_height" not-null="true" />
        </property>
        <list name="shapes" inverse="true" table="rootshape" cascade="all,delete-orphan">
            <key>
                <column name="canvas_id" not-null="true" />
            </key>
            <list-index>
            	<column name="shape_index" not-null="true"/>
            </list-index>
            <one-to-many class="org.pathwayeditor.businessobjects.hibernate.pojos.RootShape"/>
        </list>
        <list name="links" inverse="true" table="rootlink" cascade="all,delete-orphan">
            <key>
                <column name="canvas_id" not-null="true" />
            </key>
            <list-index>
            	<column name="link_index" not-null="true"/>
            </list-index>
            <one-to-many class="org.pathwayeditor.businessobjects.hibernate.pojos.Link"/>
        </list>
        <list name="labels" inverse="true" table="rootlabel" cascade="all,delete-orphan">
            <key>
                <column name="canvas_id" not-null="true" />
            </key>
            <list-index>
            	<column name="label_index" not-null="true"/>
            </list-index>
            <many-to-many class="org.pathwayeditor.businessobjects.hibernate.pojos.Label" column="label_id" />
        </list>
    </class>
</hibernate-mapping>
