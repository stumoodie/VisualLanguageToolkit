<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibMap" table="mapdiagram">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id> 
       	<many-to-one name="folder" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibFolder">
        	<column name="folder_id" not-null="false" />
    	</many-to-one>
      	<property name="name" type="string">
          	<column name="name" length="128" not-null="true" />
     	</property>
        <property name="description" type="string">
            <column name="description" length="2048" not-null="true" />
        </property>
        <many-to-one name="repository" class = "org.pathwayeditor.businessobjects.hibernate.pojos.HibRepository">
			<column name="repository_id" not-null="false" />
		</many-to-one>
		<property name="INode" type="int" access="property">
			<column name="inode" not-null="true" />
		</property>
    </class>
</hibernate-mapping>
