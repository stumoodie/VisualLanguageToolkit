<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibNotation" table="notation">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="qualifiedName" type="string">
	         <column name="qualified_name" length="512" not-null="true" />
       	</property>
       	<property name="majorVersion" type="int">
           	<column name="major_version" not-null="true" />
        </property>
	    <property name="minorVersion" type="int">
    		<column name="minor_version" not-null="true" />
    	</property>
    	<property name="patchVersion" type="int">
        	<column name="patch_version" not-null="true" />
        </property>
	   	<property name="displayName" type="string">
           	<column name="name" length="128" not-null="true" />
       	</property>
        <property name="description" type="string">
            <column name="description" length="2048" not-null="true" />
        </property>
        <set name="objectTypes" inverse="true" cascade="all,delete-orphan" lazy="false">
            <key>
                <column name="notation_id" not-null="true" />
            </key>
            <one-to-many class="org.pathwayeditor.businessobjects.hibernate.pojos.HibObjectType" />
        </set>
    </class>
    <query name="notationExists"><![CDATA[
			select count(*) from HibNotation
			where qualifiedName = :qualifiedName AND majorVersion = :majorVersion AND minorVersion = :minorVersion
				AND patchVersion = :patchVersion
    	]]></query>
    <query name="loadNotation"><![CDATA[
    		from HibNotation n join fetch n.objectTypes
			where n.qualifiedName = :qualifiedName AND n.majorVersion = :majorVersion AND n.minorVersion = :minorVersion
				AND n.patchVersion = :patchVersion
    	]]></query>
</hibernate-mapping>
