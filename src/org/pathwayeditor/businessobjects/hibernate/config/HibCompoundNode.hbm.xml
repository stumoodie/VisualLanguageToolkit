<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pathwayeditor.businessobjects.hibernate.pojos.HibCompoundNode" table="compoundnode">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <properties name="xak1compoundnode" unique="true">
        	<many-to-one name="model" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibModel">
            	<column name="model_id" not-null="true" />
        	</many-to-one>
        	<property name="nodeIndex" type="int" >
        		<column name="node_index" not-null="true"/>
        	</property>
        </properties>

        <joined-subclass
			name="org.pathwayeditor.businessobjects.hibernate.pojos.HibCompoundRootNode"
			table="CompoundRootNode">
			<key>
    			<column name="id" not-null="true" unique="true"/>
    		</key>
    		<many-to-one name="model" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibModel">
            	<column name="referring_model_id" not-null="true" unique ="true" />
        	</many-to-one>
		</joined-subclass>
        
        <joined-subclass
			name="org.pathwayeditor.businessobjects.hibernate.pojos.HibChildNode"
			table="CompoundChildNode">
			<key>
    			<column name="id" not-null="true" unique="true"/>
    		</key>
    		<many-to-one name="parentNode" class="org.pathwayeditor.businessobjects.hibernate.pojos.HibCompoundNode" cascade="all">
        	<column name="parent_node_id" not-null="false"/>
        </many-to-one>
		</joined-subclass>
		
    </class>
</hibernate-mapping>
